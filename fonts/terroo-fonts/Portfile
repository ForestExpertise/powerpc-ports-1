destroot {
    set fontdir ${destroot}${prefix}/share/fonts/
    xinstall -m 0755 -d ${fontdir}
    move ${worksrcpath}/fonts ${fontdir}/${name}
}

post-activate {
    system "${prefix}/bin/fc-cache -v ${prefix}/share/fonts"
}
post-deactivate {
    system "${prefix}/bin/fc-cache -v ${prefix}/share/fonts"
}
