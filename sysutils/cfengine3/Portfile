                    --disable-silent-rules \
                    --enable-fhs \
                    --with-avahi=no \
                    --with-libcurl=${prefix} \
                    --with-librsync=${prefix} \
                    --with-libxml2=${prefix} \
                    --with-libyaml=${prefix} \
                    --with-lmdb=${prefix} \
                    --with-openssl=${prefix} \
                    --with-pcre2=${prefix} \
                    --with-postgresql=no
