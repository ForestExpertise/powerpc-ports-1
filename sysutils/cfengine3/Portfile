fetch.type          git

post-fetch {
    system -W ${worksrcpath} "git submodule update --init --recursive"
}

use_autoreconf      yes
autoreconf.cmd      ./autogen.sh
autoreconf.args     --enable-debug

depends_build-append \
                    port:autoconf \
                    port:automake \
                    port:bison \
                    port:libtool

depends_lib-append  port:curl \
                    port:librsync \
                    port:libxml2 \
                    port:libyaml \
                    port:lmdb \
                    port:pcre2

